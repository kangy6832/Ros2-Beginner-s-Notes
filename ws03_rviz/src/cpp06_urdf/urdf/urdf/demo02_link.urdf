<!-- 
    生成不同形状的机器人部件

--> 
<robot name="demo02_link">
    <link name="base_link">
    <!-- 描述link的外观 -->
        <visual>
            <!-- 形状 -->
            <geometry>
                <!-- <box size="0.5 0.2 0.6"/> -->
                <!-- 球状 -->
                <!-- <sphere radius="0.0"/> -->
                <!-- 圆柱 -->
                <cylinder radius="0.1" length="2"/>
                <!-- <mesh filename="package://cpp06_urdf/meshes/...." scale="1.0 1.0 1.0"/> -->
            </geometry>
            <!-- 平移量和旋转度 -->
            <origin xyz="1" rpy="0.1 0.1 0.9"/>
            <!-- 颜色 -->
            <material name="yellow">
                <color rgba="0.8 0.2 0.3 1"/>
            </material>
        </visual>
    </link>
</robot>
